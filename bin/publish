#!/usr/bin/env bash

SCRIPT_BASEDIR=$(dirname $0)


set -e
cd "${SCRIPT_BASEDIR}/.."

if [ -f ./tmp/publish.config ]; then
	. ./tmp/publish.config
fi

echo "rsync to '${RSYNC_USER}@${RSYNC_HOST}:${RSYNC_REMOTE_PATH}'"
rsync -vurt --chmod=Du=rwx,Dgo=rx,Fu=rw,Fog=r --exclude=.DS_Store --exclude=.gitignore src/ man ${RSYNC_USER}@${RSYNC_HOST}:${RSYNC_REMOTE_PATH}
